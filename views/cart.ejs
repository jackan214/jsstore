<head>
    <link rel="stylesheet" href="css/cart.css">
</head>
<div class="container">
    <h1>Shopping Cart</h1>
    <div class="row">
      <div id="cart-items">
        <% for (let i = 0; i < currentCart.length; i++) { %>
        <div class="card">
            <div class="card-body">
            <h3 class="card-title"><%= currentCart[i].name %></h3>
            <p class="card-text"><%= currentCart[i].description %></p>
            <p class="card-text">Price: <%= currentCart[i].price %></p>
            </div>
        </div>
        <% } %>
      </div>
    </div>
    <button>Checkout</button>
    <form action="/clear-cookies" method="post">
      <button>Clear cart</button>
    </form>
  </div>